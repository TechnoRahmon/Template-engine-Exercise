doctype html
html
    include ./head.pug

    body.container
        include ./NavBar.pug

        main.d-flex.justify-content-between.align-items-center.flex-column.w-100
            header.d-flex.justify-content-center.w-100.d-flex.justify-content-center.align-items-center.flex-column
                    if signupMessage 
                        h3 #{signupMessage}
                        a.btn.btn-primary.mt-3(href='/login') Login
                    else if loginMessage
                        h3 #{loginMessage}
                    else
                        h3 This Page Not Found
                        
            include ./Footer.pug
