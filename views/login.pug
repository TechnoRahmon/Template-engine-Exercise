doctype html
html
    include ./head.pug

    body.container
        include ./NavBar.pug

        main.d-flex.justify-content-between.align-items-center.flex-column.w-100
            header.d-flex.justify-content-center.w-100.d-flex.justify-content-center.align-items-center.flex-column
                form.g-3.w-25.mt-5(action='/users/login' method='POST')
                    h2.my-3 Login 
                    if error
                        p.text-danger #{error}
                    input#email.form-control.mt-2(type='email' name='email' placeholder='Email')
                    input#password.form-control.mt-2(type='password' name='password' placeholder='Password')
                    button.btn.btn-primary.mt-3(type='submit') Login

            
            include ./Footer.pug
